# Guard Automation Environment Variables
# Copy this file to .env and fill in your credentials

# Guard Credentials
GUARD_USERNAME=your_username@example.com
GUARD_PASSWORD=your_password_here

# Guard Portal URL
GUARD_LOGIN_URL=https://gigezrate.guard.com/auth

# 2FA Email Credentials (for auto-fetching verification codes)
GUARD_2FA_EMAIL=your.email@gmail.com
GUARD_2FA_PASSWORD=your_app_password_here

# Webhook Server Settings
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5001
WEBHOOK_PATH=/webhook

# Browser Settings
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=60000

# Worker Settings
MAX_WORKERS=3

# Trace Settings
ENABLE_TRACING=true

# Cleanup Settings (in days)
CLEANUP_LOGS_DAYS=7
CLEANUP_TRACES_DAYS=30
CLEANUP_SESSIONS_DAYS=7
